<UserControl x:Class="Dashboard_project.Views.UserControls.UserCardParameter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Dashboard_project.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border Style="{StaticResource borderItemParamCard}" Grid.Column="0">
            <StackPanel Orientation="Vertical" Margin="10">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Resources/Icon.png" Style="{StaticResource IconParamCard}"/>
                    <TextBlock Text="Название параметра" Style="{StaticResource NameParamCard}"/>
                </StackPanel>
                <TextBlock Name="ParamValue" Text="123,2 Тыс.тонн" Style="{StaticResource ValueParamCard}"/>
                <StackPanel Orientation="Horizontal" Margin="10 0">
                    <Image Source="/Resources/arrow-up.png" Style="{StaticResource ArrowParam}"/>
                    <TextBlock Text="+12% on this week" Style="{StaticResource DateSelectionIntervalCard}"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>

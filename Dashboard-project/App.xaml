                                                <TextBlock Margin="2,0" Grid.Row="1" 
                                                           Grid.RowSpan="3" Grid.ColumnSpan="4" 
                                                           Grid.Column="0"  
                                                           HorizontalAlignment="Center" 
                                                           VerticalAlignment="Center" FontSize="18" 
                                                           FontFamily="Arial Bold" />
                                                <Ellipse Grid.ColumnSpan="4" Margin="3"
                                                         HorizontalAlignment="Center" Fill="Transparent"
                                                         Height="4" StrokeThickness="2" 
                                                         VerticalAlignment="Center" Width="4">
                                                    <Ellipse.Stroke>
                                                        <LinearGradientBrush EndPoint="0.48,-1" 
                                                                             StartPoint="0.48,1.25">
                                                            <GradientStop Color="#858e96"/>
                                                            <GradientStop Color="#60696b" 
                                                                          Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Ellipse.Stroke>
                                                </Ellipse>
                                                <Border x:Name="DisabledVisual" 
                                                        BorderBrush="#B2FFFFFF" BorderThickness="1" 

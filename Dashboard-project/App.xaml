<Application x:Class="Dashboard_project.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Dashboard_project"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             StartupUri="Views/Windows/MainWindow.xaml">
    <Application.Resources>
        <SolidColorBrush Color="#707B81" x:Key="NoActivity"/>
        <SolidColorBrush Color="#E9EDF7" x:Key="Main"/>
        <SolidColorBrush Color="#212227" x:Key="Akcent"/>
        <SolidColorBrush Color="White" x:Key="Addict"/>

        <Style TargetType="Window" x:Key="BaseWindow">
            <Setter Property="Background" Value="{StaticResource Main}"/>
        </Style>

        <Style TargetType="Grid" x:Key="LeftSideBar">
            <Setter Property="Background" Value="{StaticResource Akcent}"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="HeaderTextBlock">
            <Setter Property="FontFamily" Value="/Resources/Fonts/#GILROY"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="15 15 0 0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="24"/>
        </Style>

        <Style TargetType="Image" x:Key="ImageLeftSideBar">
            <Setter Property="Height" Value="25"/>
            <Setter Property="Width" Value="25"/>
            <Setter Property="Margin" Value="0 10"/>
        </Style>

        <Style TargetType="UserControl" x:Key="ButtonLeftSideBar">
            <Setter Property="Height" Value="25"/>
            <Setter Property="Width" Value="25"/>
            <Setter Property="Margin" Value="0 10"/>
        </Style>
        
        <!-- Стили к элементами карточки параметров-->
        
        <Style TargetType="Border" x:Key="borderItemParamCard">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Background" Value="{StaticResource Addict}"/>
            <Setter Property="CornerRadius" Value="20"/>
        </Style>

        <Style TargetType="Image" x:Key="IconParamCard">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Width" Value="35"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="NameParamCard">
            <Setter Property="Margin" Value="5 5 0 5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontFamily" Value="/Resources/Fonts/#GILROY"/>
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="ValueParamCard">
            <Setter Property="FontFamily" Value="/Resources/Fonts/#GILROY"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Margin" Value="10"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="DateSelectionIntervalCard">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontFamily" Value="/Resources/Fonts/#GILROY"/>
            <Setter Property="FontWeight" Value="Regular"/>
            <Setter Property="FontSize" Value="10"/>
        </Style>

        <Style TargetType="Image" x:Key="ArrowParam">
            <Setter Property="Height" Value="15"/>
        </Style>

        <!-- Стили к карточке с картой -->

        <Style TargetType="Border" x:Key="BorderNameItemMap">
            <Setter Property="Panel.ZIndex" Value="1"/>
            <Setter Property="Margin" Value="0 10 10 10"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Padding" Value="7"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Background" Value="{StaticResource Addict}"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="LocationName">
            <Setter Property="FontFamily" Value="/Resources/Fonts/#GILROY"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>

        <!-- Стили для раздеения карточек параметров и диаграмм -->

        <Style TargetType="GridSplitter" x:Key="SplitterStyle">
            <Setter Property="Height" Value="10"/> 
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Grid>
                            <Border CornerRadius="0 3 3 0"
                                    Panel.ZIndex="0"
                                    Height="5">
                                <Border.Background>
                                    <LinearGradientBrush Opacity="0.5">
                                        <GradientStop Color="#858e96"/>
                                        <GradientStop Color="#60696b" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>

                            <Border  Background="{StaticResource Akcent}"
                                     Opacity="0.75"
                                     Panel.ZIndex="1"
                                     CornerRadius="3"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center"
                                     Width="35" Height="10"
                                     BorderThickness="1">
                                <Border.BorderBrush>
                                    <LinearGradientBrush Opacity="0.5">
                                        <GradientStop Color="#858e96"/>
                                        <GradientStop Color="#60696b" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.BorderBrush>
                                <StackPanel Orientation="Vertical"
                                            VerticalAlignment="Center">
                                    <Separator Height="1"
                                           Background="{StaticResource Addict}"
                                           Margin="10 1 10 1"/>
                                    <Separator Height="1"
                                           Background="{StaticResource Addict}"
                                           Margin="10 0 10 1"/>
                                    <Separator Height="1"
                                           Background="{StaticResource Addict}"
                                           Margin="10 0 10 1"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Стили к датапикеру для выбора даты отображения параметров -->

        <Style TargetType="Border" x:Key="CalendarItem">
            <Setter Property="CornerRadius" Value="1"/>
            <Setter Property="Background" Value="#60696b"/>
            <Setter Property="Margin" Value="1"/>
        </Style>

        <Style x:Key="DatePickerStyle1" TargetType="{x:Type DatePicker}">
            <Setter Property="Foreground" Value="#FF333333"/>
            <Setter Property="VerticalAlignment" Value="Bottom"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="IsTodayHighlighted" Value="True"/>
            <Setter Property="SelectedDateFormat" Value="Short"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="2"/>
            <Setter Property="BorderBrush" Value="{x:Null}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type DatePicker}">
                        <Border BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                Background="{TemplateBinding Background}" 
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="5">
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal"/>
                                    <VisualState x:Name="Disabled">
                                        <Storyboard>
                                            <DoubleAnimation Duration="0" To="1" 
                                        Storyboard.TargetProperty="Opacity" 
                                        Storyboard.TargetName="PART_DisabledVisual"/>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <Grid x:Name="PART_Root" 
                                    HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                    VerticalAlignment="{TemplateBinding VerticalContentAlignment}">
                                <Grid.Resources>
                                    <SolidColorBrush x:Key="DisabledBrush" 
                                                       Color="#A5FFFFFF"/>
                                    <ControlTemplate x:Key="DropDownButtonTemplate" 
                                                       TargetType="{x:Type Button}">
                                        <Grid>
                                            <VisualStateManager.VisualStateGroups>
                                                <VisualStateGroup x:Name="CommonStates">
                                                    <VisualStateGroup.Transitions>
                                                        <VisualTransition GeneratedDuration="0"/>
                                                        <VisualTransition GeneratedDuration="0:0:0.1"
                                                    To="MouseOver"/>
                                                        <VisualTransition GeneratedDuration="0:0:0.1" 
                                                    To="Pressed"/>
                                                    </VisualStateGroup.Transitions>
                                                    <VisualState x:Name="Normal"/>
                                                    <VisualState x:Name="MouseOver">
                                                        <Storyboard>
                                                            <ColorAnimation Duration="0" 
                                                                            To="#FF448DCA" 
                                                                            Storyboard.TargetProperty="(Border.Background).
                                                                            (SolidColorBrush.Color)" 
                                                                            Storyboard.TargetName="Background"/>
                                                            <ColorAnimationUsingKeyFrames BeginTime="0" 
                                                                                          Duration="00:00:00.001" 
                                                                                          Storyboard.TargetProperty="(Border.Background).
                                                                                          (GradientBrush.GradientStops)[3].
                                                                                          (GradientStop.Color)" 
                                                                                          Storyboard.TargetName="Background">
                                                                <SplineColorKeyFrame KeyTime="0" 
                                                                                     Value="#7FFFFFFF"/>
                                                            </ColorAnimationUsingKeyFrames>
                                                            <ColorAnimationUsingKeyFrames BeginTime="0" 
                                                                                          Duration="00:00:00.001" 
							                                                              Storyboard.TargetProperty="(Border.Background).
							                                                                                         (GradientBrush.GradientStops)[2].
                                                                                                                     (GradientStop.Color)" 
                                                                                          Storyboard.TargetName="Background">
                                                                                                  <SplineColorKeyFrame KeyTime="0" 
                                                                                                                       Value="#CCFFFFFF"/>
                                                            </ColorAnimationUsingKeyFrames>
                                                              <ColorAnimationUsingKeyFrames BeginTime="0" 
                                                                                            Duration="00:00:00.001" 
							                                                                Storyboard.TargetProperty=
                                                                                            "(Border.Background).
                                                                                            (GradientBrush.GradientStops)[1].
                                                                                            (GradientStop.Color)" 
                                                                                            Storyboard.TargetName="Background">
                                                                                                  <SplineColorKeyFrame KeyTime="0" 
                                                                                                                       Value="#F2FFFFFF"/>
                                                              </ColorAnimationUsingKeyFrames>
                                                                <ColorAnimationUsingKeyFrames BeginTime="0" 
                                                                                            Duration="00:00:00.001" 
							                                                                Storyboard.TargetProperty=
                                                                                            "(Border.Background).
                                                                                            (GradientBrush.GradientStops)[0].
                                                                                            (GradientStop.Color)" 
                                                                                            Storyboard.TargetName="Background">
                                                                    <SplineColorKeyFrame KeyTime="0" 
                                                                                                                       Value="#F2FFFFFF"/>
                                                                </ColorAnimationUsingKeyFrames>
                                                        </Storyboard>
                                                    </VisualState>
                                                    <VisualState x:Name="Pressed">
                                                        <Storyboard>
                                                            <ColorAnimationUsingKeyFrames BeginTime="0" 
                                                                                          Duration="00:00:00.001" 
                                                                                          Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" 
                                                                                          Storyboard.TargetName="Background">
                                                                                                  <SplineColorKeyFrame KeyTime="0" 
                                                                                                                       Value="#FF448DCA"/>
                                                            </ColorAnimationUsingKeyFrames>
                                                            <DoubleAnimationUsingKeyFrames BeginTime="0" 
                                                                                           Duration="00:00:00.001" 
                                                                                           Storyboard.TargetProperty="(UIElement.Opacity)" 
                                                                                           Storyboard.TargetName="Highlight">
                                                                                                   <SplineDoubleKeyFrame KeyTime="0" 
                                                                                                                         Value="1"/>
                                                            </DoubleAnimationUsingKeyFrames>
                                                            <ColorAnimationUsingKeyFrames BeginTime="0" 
                                                                                          Duration="00:00:00.001" 
                                                                                          Storyboard.TargetProperty="(Border.Background).
                                                                                          (GradientBrush.GradientStops)[1].
                                                                                          (GradientStop.Color)" 
                                                                                          Storyboard.TargetName="Background">
                                                                <SplineColorKeyFrame KeyTime="0" 
                                                                                     Value="#EAFFFFFF"/>
                                                            </ColorAnimationUsingKeyFrames>
                                                            <ColorAnimationUsingKeyFrames BeginTime="0" 
                                                                                          Duration="00:00:00.001" 
                                                                                          Storyboard.TargetProperty="(Border.Background).
                                                                                          (GradientBrush.GradientStops)[2].
                                                                                          (GradientStop.Color)" 
                                                                                          Storyboard.TargetName="Background">
                                                                <SplineColorKeyFrame KeyTime="0" 
                                                                                     Value="#C6FFFFFF"/>
                                                            </ColorAnimationUsingKeyFrames>
                                                            <ColorAnimationUsingKeyFrames BeginTime="0" 
                                                                                          Duration="00:00:00.001" 
                                                                                          Storyboard.TargetProperty="(Border.Background).
                                                                                          (GradientBrush.GradientStops)[3].
                                                                                          (GradientStop.Color)" 
                                                                                          Storyboard.TargetName="Background">
                                                                <SplineColorKeyFrame KeyTime="0" 
                                                                                     Value="#6BFFFFFF"/>
                                                            </ColorAnimationUsingKeyFrames>
                                                            <ColorAnimationUsingKeyFrames BeginTime="0" 
                                                                                          Duration="00:00:00.001" 
                                                                                          Storyboard.TargetProperty="(Border.Background).
                                                                                          (GradientBrush.GradientStops)[0].
                                                                                          (GradientStop.Color)" 
                                                                                          Storyboard.TargetName="Background">
                                                                <SplineColorKeyFrame KeyTime="0" 
                                                                                     Value="#F4FFFFFF"/>
                                                            </ColorAnimationUsingKeyFrames>
                                                        </Storyboard>
                                                    </VisualState>
                                                    <VisualState x:Name="Disabled"/>
                                                </VisualStateGroup>
                                            </VisualStateManager.VisualStateGroups>
                                            <Grid Background="#11FFFFFF" 
                                                  FlowDirection="LeftToRight" 
                                                  HorizontalAlignment="Center" Height="25" 
                                                  Margin="0" VerticalAlignment="Center" 
                                                  Width="25">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="20*"/>
                                                    <ColumnDefinition Width="20*"/>
                                                    <ColumnDefinition Width="20*"/>
                                                    <ColumnDefinition Width="20*"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="23*"/>
                                                    <RowDefinition Height="19*"/>
                                                    <RowDefinition Height="19*"/>
                                                    <RowDefinition Height="19*"/>
                                                </Grid.RowDefinitions>
                                                <Border x:Name="Highlight" 
                                                          BorderBrush="#FF45D6FA" 
                                                          BorderThickness="2" Grid.ColumnSpan="4" 
                                                          CornerRadius="7" Margin="-0.5" 
                                                          Opacity="0" Grid.Row="0" 
                                                          Grid.RowSpan="4"/>
                                                <Border x:Name="Background"  
                                                          BorderThickness="2"
                                                          Grid.ColumnSpan="4" CornerRadius="5" 
                                                          Margin="0,-1,0,0" Opacity="1" 
                                                          Grid.Row="0" Grid.RowSpan="4">
                                                    <Border.BorderBrush>
                                                        <LinearGradientBrush EndPoint="0.3,-1.1" 
                                                                             StartPoint="0.46,1.6">
                                                            <GradientStop Color="#858e96"/>
                                                            <GradientStop Color="#60696b" Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Border.BorderBrush>
                                                    <Border.Background>
                                                        <LinearGradientBrush EndPoint=".7,1" 
                                                                             StartPoint=".7,0">
                                                            <GradientStop Color="Transparent" 
                                                                          Offset="0"/>
                                                            <GradientStop Color="Transparent" 
                                                                          Offset="0.375"/>
                                                            <GradientStop Color="Transparent" 
                                                                          Offset="0.625"/>
                                                            <GradientStop Color="Transparent" 
                                                                          Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Border.Background>
                                                </Border>
                                                <Border x:Name="BackgroundGradient" 
                                                        BorderBrush="{x:Null}" 
                                                        BorderThickness="0" Grid.ColumnSpan="4" 
                                                        CornerRadius="5" Margin="0,-1,0,0" 
                                                        Opacity="1" Grid.Row="1" 
                                                        Grid.RowSpan="4">
                                                    <Border.Background>
                                                        <LinearGradientBrush EndPoint=".7,1" 
                                                                             StartPoint=".7,0">
                                                            <GradientStop Color="Transparent" 
                                                                          Offset="0"/>
                                                            <GradientStop Color="Transparent" 
                                                                          Offset="0.375"/>
                                                            <GradientStop Color="Transparent" 
                                                                          Offset="0.625"/>
                                                            <GradientStop Color="Transparent" 
                                                                          Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Border.Background>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition/>
                                                            <ColumnDefinition/>
                                                            <ColumnDefinition/>
                                                            <ColumnDefinition/>
                                                            <ColumnDefinition/>
                                                            <ColumnDefinition/>
                                                            <ColumnDefinition/>
                                                        </Grid.ColumnDefinitions>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition/>
                                                            <RowDefinition/>
                                                            <RowDefinition/>
                                                            <RowDefinition/>
                                                            <RowDefinition/>
                                                        </Grid.RowDefinitions>
                                                        <Border Style="{StaticResource CalendarItem}" Grid.Row="1" Grid.Column="1"/>
                                                        <Border Style="{StaticResource CalendarItem}" Grid.Row="1" Grid.Column="2"/>
                                                        <Border Style="{StaticResource CalendarItem}" Grid.Row="1" Grid.Column="3"/>
                                                        <Border Style="{StaticResource CalendarItem}" Grid.Row="1" Grid.Column="4"/>
                                                        <Border Style="{StaticResource CalendarItem}" Grid.Row="1" Grid.Column="5"/>
                                                        <Border Style="{StaticResource CalendarItem}" Grid.Row="2" Grid.Column="1"/>
                                                        <Border Style="{StaticResource CalendarItem}" Grid.Row="2" Grid.Column="2"/>
                                                        <Border Style="{StaticResource CalendarItem}" Grid.Row="2" Grid.Column="3"/>
                                                        <Border Style="{StaticResource CalendarItem}" Grid.Row="2" Grid.Column="4"/>
                                                        <Border Style="{StaticResource CalendarItem}" Grid.Row="2" Grid.Column="5"/>
                                                        <Border Style="{StaticResource CalendarItem}" Grid.Row="3" Grid.Column="1"/>
                                                        <Border Style="{StaticResource CalendarItem}" Grid.Row="3" Grid.Column="2"/>
                                                        <Border Style="{StaticResource CalendarItem}" Grid.Row="3" Grid.Column="3"/>
                                                        <Border Style="{StaticResource CalendarItem}" Grid.Row="3" Grid.Column="4"/>
                                                        <Border Style="{StaticResource CalendarItem}" Grid.Row="3" Grid.Column="5"/>
                                                    </Grid>
                                                </Border>
                                                <Border Grid.ColumnSpan="4" Background="Transparent"
                                                        Grid.RowSpan="1" BorderThickness="0 0 0 2" CornerRadius="5 5 0 0">
                                                    <Border.BorderBrush>
                                                        <LinearGradientBrush EndPoint="0.48,-1" 
                                                                             StartPoint="0.48,1.25">
                                                            <GradientStop Color="#858e96"/>
                                                            <GradientStop Color="#60696b" 
                                                                          Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Border.BorderBrush>
                                                </Border>
